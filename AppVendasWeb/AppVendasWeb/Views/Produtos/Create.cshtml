@model AppVendasWeb.Models.Produto

@{
    ViewData["Title"] = "Create";
}

<div class="text-center">
    <h1>Criar</h1>
    <h4>Novo Produto</h4>

</div>

<hr />

<div class="row">
    <div class="col">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row g-2">
                <div class="col-md ">
                    <div class="input-group mb-3">
                        <span class="input-group-text p-3"
                              style="background-image: linear-gradient( 109.6deg,  rgba(5,84,94,1) 16%, #bbb 91.1% ); color:white; font-size:large; font-weight:bold;">
                            <label asp-for="Descricao" class="control-label"></label>
                        </span>
                        <input asp-for="Descricao" class="form-control p-2 py-3 rounded-end" />
                        <span asp-validation-for="Descricao" class="text-danger m-3"></span>
                    </div>
                </div>
            </div>

            <div class="col-md">
                <div class="input-group mb-3">
                    <span class="input-group-text p-3"
                          style="background-image: linear-gradient( 109.6deg,  rgba(5,84,94,1) 16%, #bbb 91.1% ); color:white; font-size:large; font-weight:bold;">
                        <label asp-for="Preco" class="control-label"></label>
                    </span>
                    <input asp-for="Preco" class="form-control p-2 py-3 rounded-end" type="number" step="0.01" />
                    <span asp-validation-for="Preco" class="text-danger m-3"></span>

                </div>
            </div>

            <div class="col-md">
                <div class="input-group mb-3">
                    <span class="input-group-text p-3"
                          style="background-image: linear-gradient( 109.6deg,  rgba(5,84,94,1) 16%, #bbb 91.1% ); color:white; font-size:large; font-weight:bold;">
                        <label asp-for="CategoriaId" class="control-label"></label>
                    </span>
                    <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark "
                       style="background-image: linear-gradient( 109.6deg,  rgba(48,207,208,1) 11.2%, rgba(51,8,103,1) 92.5% );font-weight:bold;" />
            </div>
        </form>
    </div>
</div>

<div class="btn btn-secondary mt-2 "
     style="background-image: radial-gradient( circle farthest-corner at 10% 20%,  rgba(90,92,106,1) 0%, rgba(32,45,58,1) 81.3% ); font-weight:bold;">
    <a asp-action="Index" style="text-decoration:none;color:white;">Voltar à lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
